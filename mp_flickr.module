 * Implements hook_theme().
 */
function mp_flickr_theme($existing, $type, $theme, $path) {
  return [

    'photo_form' => [
      'variables' => [
        'photo_id' => NULL,
        'photo' => NULL,
      ],
    ],

    'gallery_form' => [
      'variables' => [
        'gallery_id' => NULL,
        'gallery' => NULL,
      ],
    ],

    'photo_field' => [
      'variables' => [
        'photo_id' => NULL,
        'photo' => NULL,
      ],
    ],

    'gallery_field' => [
      'variables' => [
        'gallery_id' => NULL,
        'gallery' => NULL,
      ],
    ],

    'gallery_field_slick' => [
      'variables' => [
        'gallery_id' => NULL,
        'gallery' => NULL,
      ],
    ],

    'photo_field_slick' => [
      'variables' => [
        'photo_id' => NULL,
        'photo' => NULL,
      ],
    ],

  ];
}

/**
 * Implements hook_page_attachments().
 */
function mp_flickr_page_attachments(&$variables) {
  $variables['#attached']['library'][] = 'mp_flickr/slick';
}
